<?xml version="1.0" encoding="UTF-8" ?>

<!--
    &lt;   represents <
    &gt;   represents >
    &amp;  represents &
    &apos; represents '
    &quot; represents "

    Pořadí typů komentářů může mít vliv!
-->

<comment-styles>
    <comment-style name="NONE" />

    <comment-style name="C-LIKE">
        <comment start="\/\*" end="\*\/" />
        <comment start="//" />
        <ignore start="([^&apos;\\]&quot;|^&quot;)" end="([^\\]&quot;|^&quot;)"/>
            <!-- bere v úvahu tyto případy: '"', '\"' a "\""-->
    </comment-style>

    <comment-style name="JAVA">
        <comment start="(\/\*\*|\/\*)" end="\*\/" />
        <comment start="//" />
        <ignore start="([^&apos;\\]&quot;|^&quot;)" end="([^\\]&quot;|^&quot;)"/>
    </comment-style>

    <comment-style name="JS">
        <comment start="\/\*" end="\*\/" />
        <comment start="//" />
        <ignore start="&quot;" end="([^\\]&quot;|^&quot;)"/>
        <ignore start="&apos;" end="([^\\]&apos;|^&apos;)"/>
            <!-- TODO: ještě existuje literár pro regex -->
    </comment-style>

    <comment-style name="PYTHON">
        <comment start="#" />
        <ignore start="&quot;{3}" end="([^\\]&quot;{3}|^&quot;{3})"/>
        <ignore start="&quot;"    end="([^\\]&quot;|^&quot;)"/>
        <ignore start="&apos;{3}" end="([^\\]&apos;{3}|^&apos;{3})"/>
        <ignore start="&apos;"    end="([^\\]&apos;|^&apos;)"/>
    </comment-style>

    <comment-style name="PHP">
        <comment start="#" />
        <comment start="//" />
        <comment start="\/\*" end="\*\/" />
        <ignore start="&quot;" end="([^\\]&quot;|^&quot;)"/>
        <ignore start="&apos;" end="([^\\]&apos;|^&apos;)"/>
            <!-- TODO: <<<EOT -->
    </comment-style>

    <comment-style name="RUBY">
        <comment start="#" />
        <comment start="=begin" end="=end" />
        <ignore start="&quot;" end="([^\\]&quot;|^&quot;)"/>
            <!-- TODO: multiline, literály -->
    </comment-style>

    <comment-style name="VB">
        <comment start="&apos;" />
        <comment start="(?i)REM " /> <!-- TODO -->
        <ignore start="&quot;" end="&quot;"/> <!-- """" = "-->
    </comment-style>

    <comment-style name="PASCAL">
        <comment start="//" />
        <comment start="\(\*" end="\*\)" />
        <comment start="\{" end="\}" />
        <ignore start="&quot;" end="&quot;"/>
        <ignore start="&apos;" end="&apos;"/>
            <!-- """" = ", '''' = ' -->
    </comment-style>

    <comment-style name="XML">
        <comment start="&lt;!--" end="--&gt;" />
    </comment-style>

    <comment-style name="CSS">
        <comment start="\/\*" end="\*\/" />
    </comment-style>

    <comment-style name="LISP">
        <comment start=";" />
        <ignore start="&quot;" end="([^\\]&quot;|^&quot;)"/>
            <!-- TODO -->
    </comment-style>

    <comment-style name="ERLANG">
        <comment start="%" />
        <!-- TODO: řetězce -->
    </comment-style>

    <comment-style name="LUA">
        <comment start="--" />
        <comment start="--\[\[" end="--\]\]" />
        <!-- TODO: řetězce -->
    </comment-style>

</comment-styles>